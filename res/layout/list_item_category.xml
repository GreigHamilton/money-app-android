<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_category"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/list_category_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Empty: name" />

    <TextView
        android:id="@+id/list_category_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Empty: type" />
    
    <TextView
        android:id="@+id/list_category_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Empty: color" />
    
    <TextView
        android:id="@+id/list_category_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Empty: description" />

</LinearLayout>