<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greighamilton.moneymanagement"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.greighamilton.moneymanagement.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <repetition android:name="android.intent.repetition.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.greighamilton.moneymanagement.AddIncomeActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.AddExpenseActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.AddGoalActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.ViewGoalsActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.AddCategoryActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.ViewCategoriesActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.ViewTrendsActivity" android:label="@string/app_name" />
        <activity android:name="com.greighamilton.moneymanagement.SummaryActivity" android:label="@string/app_name" />
    </application>

</manifest>