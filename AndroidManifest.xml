        <activity android:name="com.greighamilton.moneymanagement.views.ViewCategoriesActivity" android:label="View Categories" />
        <activity android:name="com.greighamilton.moneymanagement.views.ViewTrendsActivity" android:label="View Trends" />
        <activity android:name="com.greighamilton.moneymanagement.views.ViewSummaryActivity" android:label="View Summary" />
